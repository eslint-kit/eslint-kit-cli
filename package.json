{
  "name": "eslint-kit-cli",
  "version": "0.0.0-set-by-ci",
  "description": "Setup ESLint and Prettier with just one CLI command",
  "author": "Evgeny Zakharov <risenforces@gmail.com>",
  "repository": "git@github.com:eslint-kit/eslint-kit-cli.git",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "bin": {
    "eslint-kit-cli": "dist/main.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "chalk": "4",
    "execa": "5",
    "inquirer": "^8.2.4",
    "jscodeshift": "^0.13.1",
    "nest-commander": "^2.5.0",
    "ora": "5.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "27.5.0",
    "@types/jscodeshift": "^0.11.5",
    "@types/node": "^16.0.0",
    "eslint-kit": "^3.0.0",
    "jest": "28.0.3",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
